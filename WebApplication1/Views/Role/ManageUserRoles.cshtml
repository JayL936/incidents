@{
    ViewBag.Title = "ManageUserRoles";
}

<h2>Manage User Roles</h2>
@Html.ActionLink("Back to roles list", "Index")
<hr />
@ViewBag.ResultMessage
<h3>Add Role to User</h3>
<br />
@using (Html.BeginForm("AddRoleToUser", "Role"))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <p class="control-label col-md-2">Username:</p>
            <div class="col-md-10">
                @Html.DropDownList("UserName", (IEnumerable<SelectListItem>)ViewBag.Users, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Role Name:</p>
            <div class="col-md-10">
                @Html.DropDownList("RoleName", (IEnumerable<SelectListItem>)ViewBag.Roles, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<hr />
<h3>Get Roles for a User</h3>
<br />
@using (Html.BeginForm("GetRoles", "Role"))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            <p class="control-label col-md-2">Username:</p>
            <div class="col-md-10">
                @Html.DropDownList("UserName", (IEnumerable<SelectListItem>)ViewBag.Users, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Get Roles for this User" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@if (ViewBag.RolesForThisUser != null)
{
    <div class="form-horizontal">
        <div class="form-group">
            <p class="control-label col-md-2"><b>Roles:</b></p>
            <div class="col-md-10">
                <ol>
                    @foreach (string s in ViewBag.RolesForThisUser)
                    {
                        <li>@s</li>
                    }
                </ol>
            </div>
        </div>
    </div>
       
}

<hr />
<h3>Delete User from a Role</h3>
<br />
@using (Html.BeginForm("DeleteUserFromRole", "Role"))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <p class="control-label col-md-2">Username:</p>
            <div class="col-md-10">
                @Html.DropDownList("UserName", (IEnumerable<SelectListItem>)ViewBag.Users, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-2">Role Name:</p>
            <div class="col-md-10">
                @Html.DropDownList("RoleName", (IEnumerable<SelectListItem>)ViewBag.Roles, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Delete this user from Role" class="btn btn-default" />
            </div>
        </div>
    </div>
}

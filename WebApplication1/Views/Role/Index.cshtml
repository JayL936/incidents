@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Index";
}

<h2>Available Roles</h2>

<p>
    @Html.ActionLink("Create Role", "Create", "Role") | @Html.ActionLink("Manage User Roles", "ManageUserRoles")
</p>

<table class="table">
    <tr>
        <th>
            Role Name
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <span onclick="return confirm('Are you sure to delete?')"><a href="/Role/Delete?RoleName=@item.Name" class="delLink">Delete</a></span>
            </td>
        </tr>
    }
</table>